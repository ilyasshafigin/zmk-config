# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{c,h,xml,dtsi,overlay,keymap}]
indent_style = space
indent_size = 4

[*.{json,yml,sh}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
