#include <input/processors.dtsi>
#include <input/processors/zmk-input-processor-keybind.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include "includes/layers.h"
#include "zmk-helpers/key-labels/36.h"

&trackball_listener {
    input-processors = <&zip_xy_scaler 1 1>;

    slow {
        layers = <SLOW>;
        input-processors = <&zip_xy_scaler 1 3>;
    };

    scroll {
        layers = <SCRL>;
        input-processors = <
            &zip_xy_scaler 1 40
            &zip_xy_to_scroll_mapper
            &zip_scroll_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)
        >;
    };

    caret {
        layers = <CARE>;
        input-processors = <&zip_keybind_keys>;
        process-next;
    };

    // хак, чтобы на курсор не перемещался на слое CARE
    // https://github.com/zmkfirmware/zmk/issues/2967#issuecomment-2982313146
    caret-prevent-move {
        layers = <CARE>;
        input-processors = <&zip_xy_scaler 0 1>;
    };

    // временно убрал auto mouse layer

    // хак, чтобы на остальных слоях трекбол не работал
    // disable {
    //    layers = <SYM NAV EXT FN>;
    //    input-processors = <&zip_xy_scaler 0 1>;
    //};

    // mouse-game {
    //     layers = <GAM GFN>;
    //     input-processors = <&zip_xy_scaler 1 1>;
    // };

    // mouse {
    //     layers = <MSE DEF>;
    //     input-processors = <&auto_mouse_layer MSE 1000>;
    // };
};

